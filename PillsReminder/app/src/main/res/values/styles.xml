<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/header_dark_grey</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SettingStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/header_dark_grey</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="PickerSettingStyle">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="arrowButtonStyle">
        <item name="android:background">?colorPrimary</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_width">@dimen/arrow_button_size</item>
        <item name="android:layout_height">@dimen/arrow_button_size</item>
    </style>

    <style name="calendarCardItemStyle">
        <item name="android:layout_width">@dimen/zero_value</item>
        <item name="android:layout_height">@dimen/zero_value</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@color/app_primary</item>
        <item name="layout_constraintDimensionRatio">H, 1:1</item>
        <item name="cardCornerRadius">@dimen/calendar_card_item_corner_radius</item>
    </style>

</resources>