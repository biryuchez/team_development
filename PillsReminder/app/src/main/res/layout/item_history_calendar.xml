<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/zero_value"
    android:layout_height="@dimen/zero_value"
    android:padding="@dimen/history_calendar_item_padding"
    tools:layout_width="@dimen/history_calendar_item_example_size"
    tools:layout_height="@dimen/history_calendar_item_example_size">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/history_calendar_item_card"
        style="@style/calendarCardItemStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/history_calendar_item_card_mm_yy_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="09.2022"
                android:textSize="10sp"
                android:textColor="@color/white_90"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/history_calendar_item_card_day_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="14"
                android:textColor="@color/white_90"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/history_calendar_item_card_event_marker_view"
                app:layout_constraintTop_toBottomOf="@id/history_calendar_item_card_mm_yy_text_view"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/history_calendar_item_card_event_marker_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@android:color/darker_gray"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>